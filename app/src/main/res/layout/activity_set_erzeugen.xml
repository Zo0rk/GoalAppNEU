<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SetErzeugenActivity"
    android:background="@color/darkmode1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-264dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkmode1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setErzeugenHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:text="SET ERZEUGEN"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/setErzeugenNameEdit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="35dp"
                android:layout_marginBottom="15dp"
                android:background="@color/darkmode4"
                android:hint="Namen eingeben..."
                android:textColor="@color/white"
                android:textColorHint="@color/lightgrey" />

            <EditText
                android:id="@+id/setErzeugenBeschrEdit"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="35dp"
                android:background="@color/darkmode4"
                android:gravity="left"
                android:hint="Beschreibung eingeben..."
                android:textColor="@color/white"
                android:textColorHint="@color/lightgrey" />

            <TextView
                android:id="@+id/setErzeugenFarbeHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginVertical="15dp"
                android:text="FARBE WÄHLEN:"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/setErzeugenRadioGr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:background="@color/darkmode1"
                android:paddingVertical="5dp">

                <RadioButton
                    android:id="@+id/setErzeugenRadioRed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingHorizontal="10dp"
                    android:buttonTint="@color/red"
                    android:text="ROT"
                    android:textColor="@color/red"></RadioButton>

                <RadioButton
                    android:id="@+id/setErzeugenRadioGruen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="center"
                    android:buttonTint="@color/green"
                    android:text="GRÜN"
                    android:textColor="@color/green"></RadioButton>

                <RadioButton
                    android:id="@+id/setErzeugenRadioGelb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingHorizontal="10dp"
                    android:buttonTint="@color/yellow"
                    android:text="GELB"
                    android:textColor="@color/yellow"></RadioButton>

                <RadioButton
                    android:id="@+id/setErzeugenRadioPurple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="LILA"
                    android:textColor="@color/purple"></RadioButton>

                <RadioButton
                    android:id="@+id/setErzeugenRadioOrange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingHorizontal="10dp"
                    android:buttonTint="@color/orange"
                    android:text="ORANGE"
                    android:textColor="@color/orange"></RadioButton>

                <RadioButton
                    android:id="@+id/setErzeugenRadioBlue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="BLAU"
                    android:textColor="@color/blue"></RadioButton>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="25dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/abbrechen"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:backgroundTint="@color/darkmode5"
                    android:text="ABBRECHEN"
                    app:cornerRadius="2dp" />

                <Button
                    android:id="@+id/speichern"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:backgroundTint="@color/darkmode5"
                    android:text="SPEICHERN"
                    app:cornerRadius="2dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

